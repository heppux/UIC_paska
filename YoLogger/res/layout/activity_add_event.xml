<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddEventActivity" >

    <EditText
        android:id="@+id/hourInput"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/minuteInput"
        android:layout_alignBottom="@+id/minuteInput"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number"
        android:visibility="gone" />

    <EditText
        android:id="@+id/minuteInput"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:visibility="gone" >
    </EditText>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="submitEvent"
        android:text="@string/submit_button" />

    <CheckBox
        android:id="@+id/share_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitButton"
        android:layout_alignLeft="@+id/submitButton"
        android:text="@string/share_checkbox" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" >

<!--         <TableRow -->
<!--             android:id="@+id/tableRow1" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content"  -->
<!--             android:background="#FFFFFF"> -->

<!--             <TextView -->
<!--                 android:id="@+id/event_prompt" -->
<!--                 android:layout_width="wrap_content" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:text="@string/event_prompt" -->
<!--                 android:textAppearance="?android:attr/textAppearanceLarge" /> -->
<!--              </TableRow> -->

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginBottom="5dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/event_text"
                    android:layout_weight="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" 
                    android:hint="Describe the activity">

                    <requestFocus />
                </EditText>
            </TableRow>
            <TableRow
                android:id="@+id/category_row"
                 android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cell_shape" >

                <TextView
                    android:id="@+id/duration_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="30"
                    android:text="Category"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/dropdown_menu"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />

            </TableRow>

            <TableRow
                android:id="@+id/duration_row"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/selector"
                android:onClick="durationSelect" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="Duration"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/duration_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 min" 
                    android:textColor="#A0A0A0"
                    android:layout_marginTop="8dp"
android:textAppearance="?android:attr/textAppearanceMedium" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>
    </TableLayout>

</RelativeLayout>