<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddEventActivity" >

    <EditText
        android:id="@+id/event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/event_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/event_prompt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_text"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_quarter_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignLeft="@+id/timed_radio_group"
            android:checked="true"
            android:onClick="durationValueChange"
            android:text="15 min"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_half_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radio_hour"
            android:layout_alignBottom="@+id/radio_hour"
            android:layout_toRightOf="@+id/radio_quarter_hour"
            android:onClick="durationValueChange"
            android:text="30 min"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_text"
            android:layout_toRightOf="@+id/radio_half_hour"
            android:onClick="durationValueChange"
            android:text="1 hr"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_toRightOf="@+id/radio_hour"
            android:onClick="durationValueChange"
            android:text="Custom"
            android:textSize="12sp" />
    </RadioGroup>

    <EditText
        android:visibility="gone"
        android:id="@+id/hourInput"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/minuteInput"
        android:layout_alignBottom="@+id/minuteInput"
        android:layout_alignLeft="@+id/radioGroup1"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:visibility="gone"
        android:id="@+id/minuteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minuteInput"
        android:layout_toRightOf="@+id/minuteInput"
        android:text="min"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:visibility="gone"
        android:id="@+id/hourLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hourInput"
        android:layout_toRightOf="@+id/hourInput"
        android:text="hrs"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:visibility="gone"
        android:id="@+id/minuteInput"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_prompt"
        android:layout_below="@+id/radioGroup1"
        android:ems="10"
        android:inputType="number" >
		
    </EditText>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_prompt"
        android:layout_below="@+id/radioGroup1"
        android:onClick="submitEvent"
        android:text="@string/submit_button" />

</RelativeLayout>